<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_height="match_parent"
              android:layout_width="390dp" android:visibility="visible">

    <TextView android:layout_width="match_parent"
              android:layout_height="30dp"
              android:id="@+id/view"
              android:textSize="20dp"
              android:textColor="@color/black"
              android:text="@string/jieshao1"/>

    <TextView android:layout_width="match_parent"
              android:text="@string/jieshao2"
              android:textSize="16dp"
              android:layout_height="wrap_content"
              android:id="@id/view"/>

    <EditText android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:hint="输入a"
              android:id="@+id/input_message_a"/>

    <EditText android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:hint="输入b"
              android:id="@+id/input_message_b"/>

    <EditText android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:hint="输入c"
              android:id="@+id/input_message_c"/>

    <Button android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/buttonwork2"
            android:text="Calculate!"/>

    <TextView android:layout_height="match_parent"
              android:textColor="@color/design_default_color_error"
              android:layout_width="wrap_content"
              android:id="@+id/View2"
              android:text="等待参数a，b，c..."/>

</LinearLayout>